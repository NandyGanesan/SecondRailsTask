<h3 class="text-center">Add New Department</h3>

<%= form_with model: @department do |f| %>
<% if @department.errors.any? %>
    <% @department.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
<p>
  <%= f.label :departmentname,"Department Name" %><br>
  <%= f.text_field :departmentname , required: true %>
</p>
<p>
  <%= f.submit("Add Department", {:class => 'btn btn-outline-primary'}) %>
</p>
<% end %>
<br/>
