<p id="notice"><%= notice %></p>
<h3 class="text-center">Add New User</h3>
<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
<p>
  <%= f.label :name,"User Name" %><br>
  <%= f.text_field :name , required: true %>
</p>
<p>
  <%= f.label :gender,"Gender" %><br>
  <%= f.text_field :gender , required: true %>
</p>
<p>
  <%= f.label :department,"Department" %>
  <%= f.collection_select :department_id, Department.order(:departmentname),:id,:departmentname, :prompt => 'Select' %>
</p>
<p>
  <%= f.submit("Add User", {:class => 'btn btn-outline-primary'}) %>
</p>
<% end %>
<br/>
`
